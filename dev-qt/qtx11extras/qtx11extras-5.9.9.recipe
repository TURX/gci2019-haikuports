	"

BUILD()
{
	qmake .
	make $jobArgs -j$jobs
}

INSTALL()
{
	make install -j$jobs

	mkdir -p $dataDir/Qt5
	mv -f $libDir/qml $dataDir/Qt5
	mv -f $prefix/mkspecs $dataDir/Qt5

	fixPkgconfig

	prepareInstalledDevelLibs libQt5X11Extras

	cd $libDir
	for i in lib*.so.5.*;do
		ln -fs $i $(echo $i | cut -f1,2 -d.)
	done

	packageEntries devel \
		$developDir \
		$libDir/cmake \
		$dataDir/Qt5/mkspecs
}
